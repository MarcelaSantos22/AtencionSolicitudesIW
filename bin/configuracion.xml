<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.2.xsd">
		
		
		<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
			<property name="driverClassName" value="com.mysql.jdbc.Driver"/>
			<property name="url" value="jdbc:mysql://localhost:3306/atencionsolicitudes"/>
			<property name="username" value="root"/>
			<property name="password" value=""/>
		</bean>
		
		<bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
			<property name="dataSource" ref="dataSource"/>
			<property name="mappingResources">
				<list>
					<value>co/edu/udea/iw/dto/Cliente.hbm.xml</value>
					<value>co/edu/udea/iw/dto/Empleado.hbm.xml</value>
					<value>co/edu/udea/iw/dto/RespuestaEncuesta.hbm.xml</value>
					<value>co/edu/udea/iw/dto/Rol.hbm.xml</value>
					<value>co/edu/udea/iw/dto/Solicitud.hbm.xml</value>
					<value>co/edu/udea/iw/dto/Sucursal.hbm.xml</value>
					<value>co/edu/udea/iw/dto/TipoSolicitud.hbm.xml</value>
					<value>co/edu/udea/iw/dto/Usuario.hbm.xml</value>
				</list>
			</property>
			<property name="hibernateProperties">
				<props>
					<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
					<prop key="hibernate.show_sql">true</prop>
					<prop key="javax.persistence.validation.mode"></prop>
				</props>
			</property>
		</bean>
		
		<bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
			<property name="sessionFactory" ref="sessionFactory"/>
			<property name="dataSource" ref="dataSource"/>
		</bean>
		
		
		<bean id="clienteDao" class="co.edu.udea.iw.dao.impl.ClienteDAOImpl">
			<property name="sessionFactory" ref="sessionFactory"/>
		</bean>
		<bean id="empleadoDao" class="co.edu.udea.iw.dao.impl.EmpleadoDAOImpl">
			<property name="sessionFactory" ref="sessionFactory"/>
		</bean>
		<bean id="respuestaEncuestaDao" class="co.edu.udea.iw.dao.impl.RespuestaEncuestaDAOImpl">
			<property name="sessionFactory" ref="sessionFactory"/>
		</bean>
		<bean id="rolDao" class="co.edu.udea.iw.dao.impl.RolDAOImpl">
			<property name="sessionFactory" ref="sessionFactory"/>
		</bean>
		<bean id="solicitudDao" class="co.edu.udea.iw.dao.impl.SolicitudDAOImpl">
			<property name="sessionFactory" ref="sessionFactory"/>
		</bean>
		<bean id="sucursalDao" class="co.edu.udea.iw.dao.impl.SucursalDAOImpl">
			<property name="sessionFactory" ref="sessionFactory"/>
		</bean>
		<bean id="tipoSolicitudDao" class="co.edu.udea.iw.dao.impl.TipoSolicitudDAOImpl">
			<property name="sessionFactory" ref="sessionFactory"/>
		</bean>
		<bean id="usuarioDao" class="co.edu.udea.iw.dao.impl.UsuarioDAOImpl">
			<property name="sessionFactory" ref="sessionFactory"/>
		</bean>
		
		
		<bean id="solicitudBl" class="co.edu.udea.iw.bl.SolicitudBL">
			<property name="usuarioDAO" ref="usuarioDao"/>
			<property name="clienteDAO" ref="clienteDao"/>
			<property name="empleadoDAO" ref="empleadoDao"/>
			<property name="sucursalDAO" ref="sucursalDao"/>
			<property name="tipoSolicitudDAO" ref="tipoSolicitudDao"/>
			<property name="solicitudDAO" ref="solicitudDao"/>		
		</bean>
		
		<context:component-scan base-package="co.edu.udea.iw.ws"/>
		
		<tx:annotation-driven transaction-manager="transactionManager"/>
</beans>
